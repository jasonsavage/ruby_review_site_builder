

%script{:src => "http://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js"}

:javascript
    var flashvars = {
        ClickTag : "http://www.google.com",
        clickTag : "http://www.google.com",
        clickTag1 : "http://www.google.com"
    };
    var params = {
        wmode : "window",
        allowScriptAccess : "sameDomain",
        allowFullScreen : false,
        bgColor : "#ffffff"
    };
    var attributes = {};
    swfobject.embedSWF("data/#{file_name}", "flashContent", "#{width}", "#{height}", "9.0.0", false, flashvars, params, attributes);

%div#flashContent
    %a{:href => "http://www.adobe.com/go/getflashplayer"}
        %img{:src => "http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif", :alt => "Get Adobe Flash Player"}


